#!/usr/bin/env ruby

require 'zeitwerk'
require 'pry'
require 'mongoid'
require 'sinatra'
require 'sinatra/flash'
require 'byebug'
require "http"
require "down/http"

loader = Zeitwerk::Loader.new
loader.push_dir("lib")
loader.push_dir("addons")
loader.push_dir("widgets")

loader.enable_reloading

loader.setup
loader.eager_load

# Setup i18n
I18n.load_path << Dir[File.expand_path("config/locales/") + "*.yml"]

# Setup Database
Mongoid.load!("config/mongoid.yml", ENV["APP_ENV"])

puts "INFO: Start hacking here"

pry
