<h1 class="title">Neuen Post erstellen</h1>

<form action="/admin/posts" method="post">
  <div class="field">
    <label class="label">Titel</label>
    <div class="control">
      <input class="input" name="post[name]" type="text" required>
    </div>
  </div>

  <div id="editor"></div>

  <div class="field">
    <label class="label">Content</label>
    <div class="control">
      <input id="content" type="hidden" name="post[content]">
      <div class="textarea" id="editor"></div>
    </div>
  </div>

  <div class="field">
    <button type="submit" class="button is-success">Erstellen</button>
  </div>

</form>
